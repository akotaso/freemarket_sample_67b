.wrrapper
  .top
    = link_to image_tag "logo.png",size: "180x50",class:"top__logo"
    
  .card__main
    .card__main__area
      .card__content__title
        %h2 クレジットカード情報入力
      .content__credit-card
        .content__credit-card__inner
          = form_for @card, url:cards_path,method: :post,local: true do |f| 
            = f.label :カード番号, class: 'card__label'
            %span.card__required 必須 
            %br
            = f.text_field :card_number, type: 'text', id: 'payment_card_number',class: 'input-card-number', placeholder: '半角数字のみ', maxlength: "16"
            %br
            .card__icons
              = image_tag src="icon_visa.png" , size: "45x18"
              = image_tag src="icon_mastercard.png" , size: "30x22"
              = image_tag src="icon_americanexpress.png" , size: "40x18"
              = image_tag src="icon_jcb.png" , size: "40x18"
              = image_tag src="icon_dinersclub.png" , size: "40x18"
              = image_tag src="icon_discover.png" , size: "40x18"
              = image_tag src="icon_applepay.png" , size: "38x18"
            .cards-expire
              = f.label :有効期限, class: 'card__label'
              %span.card__required 必須
              %br
              .cards-expires
                .cards-expire__wrap
                  = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'input-month-expire'
                  %span.expire-text 月
                .cards-expire__wrap
                  = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'input-year-expire'
                  %span.expire-text 年
            .cards-expire
              = f.label :セキュリティコード, class: 'card__label'
              %span.card__required 必須
              %br
              = f.text_field :cvc, type: 'text',id: "payment_card_cvc", class: 'input-cvc-number', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"
            .content-bottom#card_token
              = f.submit '登録する', class: 'content-bottom--add-btn', id: 'token_submit'

  .bot
    %ul.bot__privacy
      %li.policy プライバシーポリシー  
      %li.terms FURIMA利用規約  
      %li.transaction 特定商取引に関する表記
    = link_to image_tag "logo-white.png",size: "180x50",class:"bot__icon"
    .bot__copyright
      ©️FURIMA,Inc