%body
  %header
    %link{href: "https://use.fontawesome.com/releases/v5.6.3/css/all.css", rel: "stylesheet"}/
    %link{href: "category.css", rel: "stylesheet"}/
    %nav
      %h1.main-logo
        = link_to root_path do
          = image_tag "logo.png"
      .keyword
        %input.keywordbox{placeholder: "キーワードから探す"}/
        %button.searchBtn{type: "submit"}
          = image_tag "icon-search 1.png",class:"glass"
    .linkrecord
      .linkrecord__left
        .links
          = link_to category_index_path,class:"anylink" do
            カテゴリ
          = link_to "",class:"anylink",id:"links__right" do
            ブランド
          = link_to detail_index_path,class:"anylink",id:"links__right" do
            商品詳細
      .linkrecord__right
        .links
          = link_to new_furimauser_session_path, class:"anylink" do
            ログイン
          = link_to new_furimauser_registration_path, class:"anylink",id:"links__right" do
            新規会員登録
    .nowPlace
      .nowPlace__items
      = link_to root_path do
        フリマ
      .nowPlace__space
        >
      .nowPlace__title
        カテゴリ一覧

  .categoryList
    .categoryLink
      .categoryLink__title
        カテゴリ一覧
      .categoryLink__links
        .categoryLink__linkGenre
          = link_to woman_index_path,id:"categoryLink1" do
            レディース
          %br/
          = link_to men_index_path,id:"categoryLink2" do
            メンズ
          %br/
          = link_to cosme_index_path,id:"categoryLink3" do
            コスメ/美容
        .categoryLink__linkGenre
          = link_to kid_index_path,id:"categoryLink1" do
            キッズ
          %br/
          = link_to entertainment_index_path ,id:"categoryLink2" do
            エンタメ
          %br/
          = link_to musical_instrument_index_path ,id:"categoryLink2" do
            楽器
          %br/
          = link_to ticket_index_path ,id:"categoryLink2" do
            チケット
        .categoryLink__linkGenre
          = link_to interior_index_path ,id:"categoryLink1" do
            インテリア
          %br/
          = link_to smartphone_index_path ,id:"categoryLink2" do
            スマホ
          %br/
          = link_to handmade_index_path ,id:"categoryLink3" do
            ハンドメイド
        .categoryLink__linkGenre
          = link_to food_index_path ,id:"categoryLink1" do
            食品
          %br/
          = link_to sport_index_path ,id:"categoryLink2" do
            スポーツ
          %br/
          = link_to buycicle_index_path ,id:"categoryLink2" do
            自転車・オートバイ
          %br/
          = link_to other_index_path ,id:"categoryLink3" do
            その他

        
