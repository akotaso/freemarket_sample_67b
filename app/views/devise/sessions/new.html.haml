.wrrapper
  .top
    = link_to root_path ,class:"top__logo" do
      = image_tag "logo.png"
  .session__main
    .session__main__area
      .session__main__area__new
        .session__main__area__new__info アカウントをお持ちでない方はこちら
        = link_to new_furimauser_registration_path ,class:"session__main__area__new__btn" do
          新規会員登録
      .session__main__area__form
        = form_for(@furimauser,url:furimauser_session_path,local: true) do |f|
          .field
            .field-label 
            = f.label :email
            %i アドレスを入力してください
            %br
            = f.email_field :email, autofocus: true, autocomplete: "email"
          .field
            .field-label
            = f.label :password
            %i (英数字7文字以上)
          .field
            = f.password_field :password, autocomplete: "off"
          .actions
            = f.submit "ログイン", class:"submit__action"
  .bot
    %ul.bot__privacy
      %li.policy プライバシーポリシー  
      %li.terms FURIMA利用規約  
      %li.transaction 特定商取引に関する表記
    = link_to root_path,class:"bot__icon" do
      = image_tag "logo-white.png"
    .bot__copyright
      ©️FURIMA,Inc